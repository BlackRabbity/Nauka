<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextFieldsStyle"
        tools:srcCompat="@drawable/ic_action_name2" />

    <TextView
        android:id="@+id/item_task_name"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/task_item_height"
        android:layout_weight="1"
        android:text="@string/task_item_name"
        style="@style/TextFieldsStyle"
        android:textColor="@color/colorPrimaryDark"/>

    <TextView
        android:id="@+id/item_task_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/task_item_date"
        style="@style/TextFieldsStyle"
        android:textColor="@color/colorSecondary"/>
</LinearLayout>